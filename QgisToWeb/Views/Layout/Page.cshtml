<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QgisToWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Custom fonts for this template-->
    <link href="Assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="Assets/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .bg-gradient-primary {
            background-color: #cddcd1 !important;
            background-image: linear-gradient(180deg,#175a27 10%,#cddcd1 100%) !important;
            background-size: cover !important;
        }
    </style>
</head>
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Nav Item - Dashboard -->
            <li id="lihome" class="nav-item">
                <a class="nav-link" href="./">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Home</span>
                </a>
            </li>
            <li id="lipemkot" class="nav-item">
                <a class="nav-link" href="./linkpemkot">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Kecamatan Mergangsang</span>
                </a>
            </li>
            <li id="liform" class="nav-item">
                <a class="nav-link" href="./linkform">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Form Data</span>
                </a>
            </li>
            <!-- Nav Item - Charts -->
            <li id="liwebmap"  class="nav-item">
                <a class="nav-link" href="./webmap">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Webmap</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li id="linews" class="nav-item">
                <a class="nav-link" href="./news">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Laporan</span>
                </a>
            </li>

            <!-- Nav Item - Pages Collapse Menu -->
            

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                @RenderBody()
            </div>
        </div>
        @*<div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>*@



    </div>
    <!-- End of Page Wrapper -->


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        var page = '@ViewBag.Title';
        $('#lihome').removeClass("active");
        $('#liwebmap').removeClass("active");
        $('#linews').removeClass("active");
        $('#liform').removeClass("active");
        $('#lipemkot').removeClass("active");

        if (page == "Home") {
            $('#lihome').addClass("active");
        } else if (page.includes("Web")) {
            $('#liwebmap').addClass("active");
        } else if (page.includes("News")) {
            $('#linews').addClass("active");
        } else if (page.includes("Form")) {
            $('#liform').addClass("active");
        } else if (page.includes("Kecamatan")) {
            $('#lipemkot').addClass("active");
        } 
        
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
